syntax on
set autochdir
"Using smart indent instead 
"filetype plugin indent on
colorscheme Monokai
if has('gui_running')
  set guifont=Consolas:h9:cANSI
endif
set guioptions-=m
set guioptions-=T
set guioptions-=r
set shiftwidth=4
set softtabstop=4
set expandtab
set nobackup
set nowritebackup
set noswapfile
set smartindent
nnoremap Y y$
nnoremap ; :
nnoremap : ;
